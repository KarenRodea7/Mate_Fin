<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntComp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interés Compuesto"
            android:textSize="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="40dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFB219"
            android:id="@+id/comp_c"
            android:text="Capital(C)"
            android:textSize="20dp"
            android:layout_marginBottom="25dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFB219"
            android:id="@+id/comp_m"
            android:text="Monto(M)"
            android:textSize="20dp"
            android:layout_marginBottom="25dp"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFB219"
            android:id="@+id/comp_it"
            android:text="Tasa de Interés(i)"
            android:textSize="20dp"
            android:layout_marginBottom="25dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFB219"
            android:id="@+id/comp_n"
            android:text="Plazo(n)"
            android:textSize="20dp"
            android:layout_marginBottom="25dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFB219"
            android:id="@+id/comp_np"
            android:text="Periodos de capitalización"
            android:textSize="20dp"
            android:layout_marginBottom="25dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFB219"
            android:id="@+id/comp_i"
            android:text="Intereses(I)"
            android:textSize="20dp"
            android:layout_marginBottom="25dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF7700"
            android:id="@+id/TE"
            android:text="Tasa equivalente"
            android:textSize="20dp"
            android:layout_marginBottom="40dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comp_Regresar"
            android:text="Regresar"
            android:textSize="20dp"
            android:layout_marginBottom="30dp"/>

    </LinearLayout>



</RelativeLayout>