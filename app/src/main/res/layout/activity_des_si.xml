<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".des_si">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descuento simple"
            android:textSize="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="40dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00B0FF"
            android:id="@+id/d_m"
            android:text="Monto(M)"
            android:textSize="20dp"
            android:layout_marginBottom="35dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00B0FF"
            android:id="@+id/d"
            android:text="Decuento(D)"
            android:textSize="20dp"
            android:layout_marginBottom="35dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00B0FF"
            android:id="@+id/d_pa"
            android:text="Plazo anticipado"
            android:textSize="20dp"
            android:layout_marginBottom="35dp"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00B0FF"
            android:id="@+id/D_td"
            android:text="Tasa de descuento "
            android:textSize="20dp"
            android:layout_marginBottom="35dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00B0FF"
            android:id="@+id/v_c"
            android:text="Valor comercial(P)"
            android:textSize="20dp"
            android:layout_marginBottom="95dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comp_Regresar"
            android:text="Regresar"
            android:textSize="20dp"
            android:layout_marginBottom="30dp"/>

    </LinearLayout>


</RelativeLayout>