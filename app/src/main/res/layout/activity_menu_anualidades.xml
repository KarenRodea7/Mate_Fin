<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu_anualidades">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anualidades"
            android:textSize="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="70dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#23D956"
            android:id="@+id/anual_m"
            android:text="Monto(M)"
            android:textSize="20dp"
            android:layout_marginBottom="60dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#23D956"
            android:id="@+id/anual_renta"
            android:text="Renta"
            android:textSize="20dp"
            android:layout_marginBottom="60dp"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#23D956"
            android:id="@+id/anual_numR"
            android:text="NÃºmero de rentas"
            android:textSize="20dp"
            android:layout_marginBottom="130dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comp_Regresar"
            android:text="Regresar"
            android:textSize="20dp"
            android:layout_marginBottom="30dp"/>

    </LinearLayout>

</RelativeLayout>